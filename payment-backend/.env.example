# Server Configuration
PORT=4100
NODE_ENV=development

# CORS and Security
CLIENT_URL=http://localhost:4200
ALLOWED_ORIGINS=http://localhost:4200,http://localhost:3000

# Stripe Integration (only needed if using Stripe payments)
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_webhook_secret
STRIPE_SUCCESS_URL=http://localhost:4200/order/success
STRIPE_CANCEL_URL=http://localhost:4200/order/cancel

# Database (only needed if using database storage)
MONGODB_URI=mongodb://localhost:27017/petstore

# Local Payment Simulation
PAYMENT_SIMULATION_DELAY=5000 # milliseconds to simulate payment processing
ORDER_EXPIRY_TIME=30 # minutes until pending orders expire

# Logging
LOG_LEVEL=debug
LOG_TO_FILE=false